  "version": "0.2.0",
  "configurations": [
    {
      "name": "Nodemon Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev"],
      "port": 5000
    },
    {
      "name": "Nodemon Attach",
      "type": "node",
      "request": "attach",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector"
    }
  ]
}
